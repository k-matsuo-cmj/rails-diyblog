<h1>Comments#new</h1>
<p>Find me in app/views/comments/new.html.erb</p>

<P>Post your comment for <%= link_to "#{@blog.name}", blog_blog_path(@blog.id) %></P>
<div>
  <%= form_with(model: [:blog, @blog, @comment], local: true) do |f| %>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <%= f.submit %>
  <% end %>
</div>